{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "mkdir public || true && cp -r *.html *.js js public/ || (mkdir public & copy /Y *.html public\\ & copy /Y *.js public\\ & xcopy /E /I /Y js public\\js\\)",
        "outputDirectory": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/results",
      "dest": "/results.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
